<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoCallWhatsApp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txNameCallWhatsApp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ale"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/txNameCallWhatsApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivFotoCallWhatsApp"
            app:layout_constraintStart_toEndOf="@id/ivFotoCallWhatsApp"
            app:layout_constraintEnd_toStartOf="@id/ibSharedCallWhatsApp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:text="Alessandro Machado"/>

        <TextView
            android:id="@+id/txCallWhatsApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hoje 14:39"
            android:textColor="#615F5F"
            app:layout_constraintStart_toEndOf="@id/ivFotoCallWhatsApp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txNameCallWhatsApp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"/>

        <ImageButton
            android:id="@+id/ibSharedCallWhatsApp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/ivFotoCallWhatsApp"
            android:src="@drawable/ic_video_cam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txNameCallWhatsApp"
            android:background="?attr/selectableItemBackground"
            />



</androidx.constraintlayout.widget.ConstraintLayout>