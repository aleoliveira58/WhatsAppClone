<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFotoStatusWhatsApp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txNameStatusWhatsApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ale"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/txNameStatusWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivFotoStatusWhatsApp"
        app:layout_constraintStart_toEndOf="@id/ivFotoStatusWhatsApp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="Alessandro Machado"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txDateStatusWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hoje 14:39"
        app:layout_constraintStart_toEndOf="@id/ivFotoStatusWhatsApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txNameStatusWhatsApp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        android:textColor="#615F5F"/>


</androidx.constraintlayout.widget.ConstraintLayout>