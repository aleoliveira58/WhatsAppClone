<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFotoChatsWhatsApp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txNameChatsWhatsApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ale"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/txNameChatsWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivFotoChatsWhatsApp"
        app:layout_constraintStart_toEndOf="@id/ivFotoChatsWhatsApp"
        app:layout_constraintEnd_toStartOf="@id/txDataChats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="Alessandro Machado"/>

    <TextView
        android:id="@+id/txMenssagemChatsWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Blz, irmÃ£o obrigado"
        android:textColor="#615F5F"
        app:layout_constraintStart_toEndOf="@id/ivFotoChatsWhatsApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txNameChatsWhatsApp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/txDataChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/ivFotoChatsWhatsApp"
        android:text="21/05/2021"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toEndOf="@id/txNameChatsWhatsApp"
        android:background="?attr/selectableItemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>